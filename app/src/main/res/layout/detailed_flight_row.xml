<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_row">

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/logo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vueling" />

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/logo"
                    android:src="@android:drawable/btn_star_big_on"
                    android:visibility="gone" />

                <wgo_app.wgo.fonts.GNBookTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/logo2"
                    android:letterSpacing="0.1"
                    android:text="VUELING AIRLINES"
                    android:textColor="@color/grey_dark_flights"
                    android:textSize="10dp" />

                <wgo_app.wgo.fonts.GNLightTextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:text="75â‚¬"
                    android:textColor="@color/green"
                    android:textSize="24dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_layout"
                android:layout_marginTop="10dp"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">

                    <RelativeLayout
                        android:id="@+id/left_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/info1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/arrow1"
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/arrow" />

                            <wgo_app.wgo.fonts.GNBookTextView
                                android:id="@+id/day1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:layout_toRightOf="@+id/arrow1"
                                android:text="WED"
                                android:textColor="@color/grey_dark_flights"
                                android:textSize="12dp" />

                            <wgo_app.wgo.fonts.GNBookTextView
                                android:id="@+id/time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_toRightOf="@+id/day1"
                                android:singleLine="true"
                                android:text="29/11/2015"
                                android:textColor="@color/grey_dark_flights"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <wgo_app.wgo.fonts.GNBookTextView
                            android:id="@+id/duration1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info1"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="5dp"
                            android:text="2.30 direct"
                            android:textColor="@color/grey_dark"
                            android:textSize="10dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">

                    <RelativeLayout
                        android:id="@+id/right_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/left_layout">

                        <RelativeLayout
                            android:id="@+id/info2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/arrow2"
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/arrow_back" />

                            <wgo_app.wgo.fonts.GNBookTextView
                                android:id="@+id/day2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_toRightOf="@+id/arrow2"
                                android:text="FRI"
                                android:textColor="@color/grey_dark_flights"
                                android:textSize="12dp" />

                            <wgo_app.wgo.fonts.GNBookTextView
                                android:id="@+id/time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:singleLine="true"
                                android:layout_toRightOf="@+id/day2"
                                android:text="02/12/2015"
                                android:textColor="@color/grey_dark_flights"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <wgo_app.wgo.fonts.GNBookTextView
                            android:id="@+id/duration2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info2"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="5dp"
                            android:text="2.30 direct"
                            android:textColor="@color/grey_dark"
                            android:textSize="10dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/last_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:text="Last check 09:35h"
                android:textColor="@color/grey_flights"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
