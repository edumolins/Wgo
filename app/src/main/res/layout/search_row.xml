<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_row">

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="10dp">
        <RelativeLayout
            android:id="@+id/info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BARCELONA"
                android:textSize="18dp"
                android:letterSpacing="0.1"
                android:textColor="@color/grey_dark_flights"
                />
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_toRightOf="@+id/origin"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROMA"
                android:textSize="18dp"
                android:letterSpacing="0.1"
                android:textColor="@color/grey_dark_flights"
                android:layout_toRightOf="@+id/arrow"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info1"
            android:layout_marginTop="10dp">
            <wgo_app.wgo.fonts.GNLightTextView
                android:id="@+id/number_weekends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="5dp"
                android:textSize="25dp"
                android:letterSpacing="0.1"
                android:textColor="@color/green"
                />
            <wgo_app.wgo.fonts.GNLightTextView
                android:id="@+id/weekends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekends"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:gravity="bottom"
                android:textSize="10dp"
                android:letterSpacing="0.1"
                android:textColor="@color/grey_dark"
                />

            <wgo_app.wgo.fonts.GNLightTextView
                android:id="@+id/number_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="175â‚¬"
                android:textSize="25dp"
                android:letterSpacing="0.1"
                android:textColor="@color/green"
                />
            <wgo_app.wgo.fonts.GNLightTextView
                android:id="@+id/max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:gravity="bottom"
                android:textSize="10dp"
                android:letterSpacing="0.1"
                android:textColor="@color/grey_dark"
                />
            <wgo_app.wgo.fonts.GNLightTextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textSize="16dp"
                android:letterSpacing="0.1"
                android:textColor="@color/green"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info2"
            android:layout_marginTop="20dp">
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textSize="12dp"
                android:letterSpacing="0.1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/green"
                android:layout_centerVertical="true"
                />
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textSize="12dp"
                android:letterSpacing="0.1"
                android:layout_toRightOf="@+id/edit"
                android:layout_marginLeft="20dp"
                android:textColor="@color/green"
                android:layout_centerVertical="true"
                />
            <wgo_app.wgo.fonts.CustomButton
                android:id="@+id/show_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/show_flights"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_toRightOf="@+id/delete"
                android:layout_marginLeft="40dp"
                android:background="@drawable/green_button"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
