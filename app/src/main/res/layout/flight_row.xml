<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_row_rounded">

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp">
        <RelativeLayout
            android:id="@+id/info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/arrow1">
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_dark_flights"
                android:text="29/11/2015"

                android:layout_marginRight="5dp"
                android:letterSpacing="0.1"
                android:textSize="12dp"/>
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_flights"
                android:text="WEDNESDAY"
                android:textSize="9dp"
                android:letterSpacing="0.1"
                android:layout_toRightOf="@+id/time1"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info1"
            android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/arrow2">
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_dark_flights"
                android:text="02/12/2015"
                android:layout_marginRight="5dp"
                android:textSize="12dp"
                android:letterSpacing="0.1"/>
            <wgo_app.wgo.fonts.GNBookTextView
                android:id="@+id/day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_flights"
                android:text="FRIDAY"
                android:textSize="9dp"
                android:letterSpacing="0.1"
                android:layout_toRightOf="@+id/time2"/>
                </LinearLayout>
        </RelativeLayout>
        <wgo_app.wgo.fonts.GNBookTextView
            android:id="@+id/last_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info2"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="23dp"
            android:textSize="10dp"
            android:letterSpacing="0.1"
            android:textColor="@color/grey_flights"
            android:text="Last check 09:35h"/>
        <wgo_app.wgo.fonts.GNLightTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="30dp"
            android:text="75â‚¬"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/last_check"/>
    </RelativeLayout>
</RelativeLayout>
