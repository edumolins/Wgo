<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/white_row">

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/logo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/btn_star_big_on" />
                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/btn_star_big_on"
                    android:visibility="gone"/>

                <wgo_app.wgo.fonts.GNBookTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/logo2"
                    android:text="VUELING AIRLINES"
                    android:textColor="@color/grey_dark_flights"
                    android:textSize="12dp" />

                <wgo_app.wgo.fonts.GNLightTextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:text="75â‚¬"
                    android:textColor="@color/green"
                    android:textSize="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/up_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_layout"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow" />

                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/day1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/arrow1"
                        android:text="WED"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="11dp" />

                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/day1"
                        android:singleLine="true"
                        android:text="29/11/2015"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="12dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/info_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/info1">
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/city_origin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="14dp"
                        android:layout_marginLeft="27dp"
                        android:text="BCN"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/hour_origin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_toRightOf="@id/city_origin1"
                        android:layout_marginLeft="10dp"
                        android:text="11:30h"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/city_destination1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/hour_origin1"
                        android:text="ROM"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/hour_destination1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_toRightOf="@id/city_destination1"
                        android:layout_marginLeft="10dp"
                        android:text="11:30h"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/airport_origin1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/city_origin1"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_marginLeft="27dp"
                        android:text="El Prat"
                        android:textStyle="italic"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/airport_destination1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/city_origin1"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_toRightOf="@+id/airport_origin1"
                        android:layout_marginLeft="9dp"
                        android:text="Fiumicino"
                        android:textStyle="italic"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/airport_origin1"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="12dp"
                        android:layout_marginLeft="27dp"
                        android:text="Direct"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/down_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/up_layout"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_back" />

                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/day2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/arrow2"
                        android:text="FRI"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="11dp" />

                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/day2"
                        android:singleLine="true"
                        android:text="14/12/2015"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="12dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/info_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/info2">
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/city_origin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="14dp"
                        android:layout_marginLeft="27dp"
                        android:text="ROM"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/hour_origin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_toRightOf="@id/city_origin2"
                        android:layout_marginLeft="10dp"
                        android:text="11:30h"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/city_destination2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/hour_origin2"
                        android:text="BCN"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/hour_destination2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_toRightOf="@id/city_destination2"
                        android:layout_marginLeft="10dp"
                        android:text="11:30h"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/airport_origin2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/city_origin2"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_marginLeft="27dp"
                        android:text="Fiumicino"
                        android:textStyle="italic"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/airport_destination2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/city_origin2"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:layout_toRightOf="@+id/airport_origin2"
                        android:layout_marginLeft="9dp"
                        android:text="Fiumicino"
                        android:textStyle="italic"
                        />
                    <wgo_app.wgo.fonts.GNBookTextView
                        android:id="@+id/type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/airport_origin2"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey_dark_flights"
                        android:textSize="12dp"
                        android:layout_marginLeft="27dp"
                        android:text="Direct"/>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/down_layout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <wgo_app.wgo.fonts.GNBookTextView
                    android:id="@+id/last_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="5dp"
                    android:text="Last check 9:36"
                    android:textColor="@color/grey_dark"
                    android:textSize="10dp" />
                <wgo_app.wgo.fonts.GNBookTextView
                    android:id="@+id/booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/last_check"
                    android:text="You'll book with Viajar.com"
                    android:textColor="@color/grey_dark"
                    android:textSize="10dp" />
                <wgo_app.wgo.fonts.CustomButton
                    android:id="@+id/booking_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/booking"
                    android:layout_marginLeft="20dp"
                    android:text="@string/book_now"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:background="@drawable/green_button"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
