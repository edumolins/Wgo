<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:tsquare_state_range_middle="true">
        <color android:color="@color/calendar_selected_range_bg"/>
    </item>
    <item android:state_selected="true" android:color="@android:color/white">
        <!-- <color android:color="@color/calendar_selected_day_bg"/> -->

        <shape>
            <solid android:color="#66cc33" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <color android:color="@color/calendar_selected_day_bg"/>
    </item>
    <item app:tsquare_state_current_month="false">
        <color android:color="@color/calendar_inactive_month_bg"/>
    </item>
    <item app:tsquare_state_highlighted="true">
        <color android:color="@color/calendar_highlighted_day_bg"/>
    </item>
    <item app:tsquare_state_today="true">
        <color android:color="@color/calendar_text_active"/>
    </item>
    <item android:color="@color/calendar_text_weekend">
        <color android:color="@color/calendar_active_month_bg"/>
    </item>
    <item android:color="@color/calendar_text_white">
        <color android:color="@color/calendar_text_active"/>
    </item>
</selector>